# Don't edit $LOAD_PATH, go straight to main Ruby file
require File.expand_path(File.join(File.dirname(__FILE__), '..', 'lib', 'snowplow-storage-loader'))
loader = SnowPlow::StorageLoader

# This Ruby script runs the SnowPlow StorageLoader.
#
# This is a three-step process:
# If Redshift is a target, bulk load from In Bucket to Redshift
# If Infobright is a target
  # Download the SnowPlow event files from In Bucket to the local file system
  # Load the SnowPlow event files into the target storage
# Then archive the processed SnowPlow event files from In Bucket to Archive Bucket

begin
  config = loader::Config.get_config()

  # If Redshift is a target, bulk load data from In Bucket to Redshift
  if config[:targets][:Redshift][:enabled] == true
    loader::RedshiftLoader.load_events(config)
  end

  # If Infobright is a target
    # Download the SnowPlow event files from In Bucket to the local file system
    # Load the SnowPlow event files into the target storage
  if config[:targets][:Infobright][:enabled] == true
    unless config[:skip].include?('download')
     loader::S3Tasks.download_events(config)
    end   

    unless config[:skip].include?('load')
      loader::Loader.load_events(config)
    end
  end

  unless config[:skip].include?('download')
   loader::S3Tasks.download_events(config)
  end

  unless config[:skip].include?('archive')
    loader::S3Tasks.archive_events(config)
  end

  puts "Completed successfully"

# Catch any SnowPlow error
rescue loader::Error => e
  $stderr.puts(e.message)
  exit 1
rescue SystemExit => e
  exit 1
rescue Exception => e
  $stderr.puts("Unexpected error: " + e.message)
  $stderr.puts(e.backtrace.join("\n"))
  exit 1
end

exit 0 # Success